#!/dev/null




<< debug / test / all
	exec -- "${ZRUN[@]}" ':: debug / test / *' --lib --bins --tests "${@}"
!!

<< debug / test / lib
	exec -- "${ZRUN[@]}" ':: debug / test / *' --lib "${@}"
!!

<< debug / test / bins
	exec -- "${ZRUN[@]}" ':: debug / test / *' --bins "${@}"
!!

<< debug / test / tests
	exec -- "${ZRUN[@]}" ':: debug / test / *' --tests "${@}"
!!


--<< debug / test / *
	export -- __VONUVOLI_FEATURES="${__VONUVOLI_FEATURES:-vonuvoli_debug_for_tests}"
	export -- CARGO_TARGET_DIR="${CARGO_TARGET_DIR:-$( exec -- readlink -f -- ./.workbench/target/debug--test )}"
	exec -- "${ZRUN[@]}" ':: cargo / test / debug' --no-default-features --features "${__VONUVOLI_FEATURES}" "${@}"
!!




<< release / test / all
	exec -- "${ZRUN[@]}" ':: release / test / *' --lib --bins --tests "${@}"
!!

<< release / test / lib
	exec -- "${ZRUN[@]}" ':: release / test / *' --lib "${@}"
!!

<< release / test / bins
	exec -- "${ZRUN[@]}" ':: release / test / *' --bins "${@}"
!!

<< release / test / tests
	exec -- "${ZRUN[@]}" ':: release / test / *' --tests "${@}"
!!


--<< release / test / *
	export -- __VONUVOLI_FEATURES="${__VONUVOLI_FEATURES:-vonuvoli_release}"
	export -- CARGO_TARGET_DIR="${CARGO_TARGET_DIR:-$( exec -- readlink -f -- ./.workbench/target/release--test )}"
	exec -- "${ZRUN[@]}" ':: cargo / test / release' --no-default-features --features "${__VONUVOLI_FEATURES}" "${@}"
!!

