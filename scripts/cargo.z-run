#!/dev/null




::// cargo / ...




<< cargo / build / debug
	exec -- "${ZRUN[@]}" ':: cargo / build / *' \
			"${@}" \
	#
!!

<< cargo / build / release
	export -- __RUST_FLAGS='-C link-args=-s'
	exec -- "${ZRUN[@]}" ':: cargo / build / *' \
			--release \
			"${@}" \
	#
!!

--<< cargo / build / *
	exec -- "${ZRUN[@]}" ':: cargo / execute' \
			build \
			--target "${__RUST_TARGET}" \
			--offline \
			"${@}" \
	#
!!




